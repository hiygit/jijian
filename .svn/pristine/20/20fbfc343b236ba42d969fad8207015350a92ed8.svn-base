body {
  overflow-x: hidden;
}

html,
body,
.container,
#app {
  margin: 0;
  width: 100%;
  height: 100%;
  font-family: PingFangSC-Medium;
  background: #02468F;
}

ul,
ol,
dl,
dd,
h1,
h2,
h3,
h4,
h5,
h6,
figure,
form,
fieldset,
legend,
input,
textarea,
button,
p,
blockquote,
th,
td,
pre,
xmp {
  margin: 0;
  padding: 0;
}

// 变左浮动
.public_floatleft {
  float: left;
}

// 变右浮动
.public_floatright {
  float: right;
}

// 清楚浮动
.public_overflow {
  overflow: hidden;
}

