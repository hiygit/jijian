// 全局样式
.content {
  margin-top: -27px;
  // height: 650px;
}

// 公共加边框的地方
.border {
  position: absolute;
  padding: 5px;
  border-style: solid;
  border-color: #03D0FF;
}

.row1 {
  border-width: 2px 0 0 2px;
  top: -2px;
  left: -2px;
}

.row2 {
  border-width: 2px 2px 0 0;
  top: -2px;
  right: -2px;
}

.col1 {
  border-width: 0 0 2px 2px;
  bottom: -2px;
  left: -2px;
}

.col2 {
  border-width: 0 2px 2px 0;
  bottom: -2px;
  right: -2px;
}

